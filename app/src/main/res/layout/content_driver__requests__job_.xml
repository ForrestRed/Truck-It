<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_driver__requests__job_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.shsu.truck_it.Driver_Requests_Job_Activity"
    tools:showIn="@layout/activity_driver__requests__job_"
    android:background="@color/backgroudColor"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <TextView
        android:text="Time:"
        android:id="@+id/textView17"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/backgroudColor"
        android:layout_marginStart="16dp"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:textColor="@color/textColor"
        android:layout_width="113dp" />

    <TextView
        android:text="TextView"
        android:id="@+id/timeTextView"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dateTextView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/textColor"
        android:layout_width="200dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView17" />

    <TextView
        android:text="TextView"
        android:id="@+id/dateTextView"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropoffTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView10"
        android:layout_marginTop="8dp"
        android:textColor="@color/textColor"
        android:layout_width="200dp" />

    <TextView
        android:text="TextView"
        android:id="@+id/dropoffTextView"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pickupTextView"
        android:textColor="@color/textColor"
        android:layout_width="200dp" />

    <TextView
        android:text="Date:"
        android:id="@+id/textView10"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/backgroudColor"
        android:layout_marginStart="16dp"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:layout_width="113dp"
        android:textColor="@color/textColor"
        />

    <Button
        android:text="Request Job"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:id="@+id/requestJob"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/buttonColor"
        android:textColor="@color/textColor"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/detailsTextView" />

    <TextView
        android:text="Pick-up Location:"
        android:id="@+id/textView8"
        android:background="@color/backgroudColor"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:layout_height="30dp"
        android:layout_width="113dp"
        android:textColor="@color/textColor"
        />

    <TextView
        android:text="Drop-off Location:"
        android:id="@+id/textView9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/backgroudColor"
        android:layout_marginStart="16dp"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:layout_height="30dp"
        android:layout_width="113dp"
        android:textColor="@color/textColor"
        />

    <TextView
        android:text="TextView"
        android:id="@+id/pickupTextView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        android:textColor="@color/textColor"
        android:layout_width="200dp" />

    <TextView
        android:text="TextView"
        android:layout_width="340dp"
        android:id="@+id/detailsTextView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/textColor"
        android:background="@color/buttonColor"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_height="150dp" />

    <TextView
        android:text="Item Description:"
        android:layout_height="30dp"
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_marginStart="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/textColor"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />


</android.support.constraint.ConstraintLayout>
