<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_driver_start_job"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.shsu.truck_it.DriverStartJobActivity"
    tools:showIn="@layout/activity_driver_start_job"
    android:background="@color/backgroudColor">

    <Button
        android:text="To Maps"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/toPickupMapButton"
        android:background="@color/buttonColor"
        android:textColor="@color/textColor"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/startJobPickup"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.15"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="To Maps"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/toDropoffMapButton"
        app:layout_constraintRight_toLeftOf="@+id/startJobDropOff"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/buttonColor"
        android:textColor="@color/textColor"
        app:layout_constraintHorizontal_bias="0.15"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toPickupMapButton" />

    <TextView
        android:text="Pickup Address"
        android:layout_width="220dp"
        android:id="@+id/startJobPickup"
        android:textColor="@color/textColor"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="48dp" />

    <TextView
        android:text="Dropoff Address"
        android:layout_width="220dp"
        android:id="@+id/startJobDropOff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/startJobPickup"
        android:textColor="@color/textColor"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="48dp" />

    <TextView
        android:text="TextView"
        android:id="@+id/startJobDetails"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="340dp"
        android:textColor="@color/textColor"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/startJobDropOff"
        android:background="@color/buttonColor"
        android:layout_height="200dp" />

    <Button
        android:text="Job Finished"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:id="@+id/CurrentJobFinishedButton"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/startJobDetails"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/buttonColor"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.42000002" />
</android.support.constraint.ConstraintLayout>
