<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_driver_start_job"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.shsu.truck_it.DriverStartJobActivity"
    tools:showIn="@layout/activity_driver_start_job"
    android:background="@color/backgroudColor">

    <TextView
        android:text="Driver Job ID"
        android:layout_width="352dp"
        android:layout_height="36dp"
        android:id="@+id/textView4"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        android:textSize="24sp" />

    <Button
        android:text="To Maps"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/toPickupMapButton"
        android:background="@color/buttonColor"
        android:textColor="@color/textColor"
        app:layout_constraintRight_toLeftOf="@+id/textView5"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintBottom_toTopOf="@+id/toDropoffMapButton"
        android:layout_marginBottom="8dp" />

    <Button
        android:text="To Maps"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/toDropoffMapButton"
        app:layout_constraintRight_toLeftOf="@+id/textView6"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/buttonColor"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="Pickup Address"
        android:layout_width="220dp"
        android:id="@+id/textView5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:textColor="@color/textColor"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="Dropoff Address"
        android:layout_width="220dp"
        android:id="@+id/textView6"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:textColor="@color/textColor"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_height="122dp"
        app:srcCompat="@color/buttonColor"
        android:id="@+id/imageView7"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_width="340dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/textColor"/>

    <TextView
        android:text="TextView"
        android:id="@+id/textView7"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="340dp"
        android:textColor="@color/textColor"/>

    <Button
        android:text="Finished"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:id="@+id/CurrentJobFinishedButton"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/buttonColor"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />
</android.support.constraint.ConstraintLayout>
