<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.shsu.truck_it">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".UserSelectionActivity"
            android:label="@string/title_activity_user_selection"
            android:theme="@style/AppTheme" />
        <activity android:name=".DriverPicksClientActivity" />
        <activity
            android:name=".JobDetailsActivity"
            android:label="@string/title_activity_job_details"
            android:theme="@style/AppTheme" />
        <activity android:name=".UserRatesDriverActivity" />
        <activity android:name=".DriverRegisterActivity"></activity>
    </application>

</manifest>